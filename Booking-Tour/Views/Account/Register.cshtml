@model Booking_Tour.Models.Users
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-content">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "signup" }))
    {
        @Html.AntiForgeryToken()
        <img src="../../Content/images/login.png" alt="" class="signup-image">
        <div class="signup-container">
            <h1 class="signup-heading">Sign up</h1>
            <div class="signup-form" autocomplete="off">
                <div class="form-group w-100">
                    <label for="name" class="form-label text-bold">Full name</label>
                    @Html.TextBoxFor(m => m.name, new { @class = "form-input", @placeholder = "User Name" })
                    @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger text-bold" })
                </div>
                <div class="form-group w-100">
                    <label for="email" class="form-label text-bold">Email</label>
                    @Html.TextBoxFor(m => m.email, new { @class = "form-input ", @placeholder = "Example: johndoe@email.com" })
                    @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger text-bold" })
                    <label class="text-danger">@ViewBag.Error</label>
                </div>
                <div class="form-group w-100">
                    <label for="password" class="form-label text-bold">Password</label>
                    @Html.PasswordFor(m => m.password, new { @class = "form-input", @placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger text-bold" })
                </div>
                <div class="form-group w-100">
                    <label for="re-password" class="form-label text-bold">Repeat password</label>
                    @Html.PasswordFor(m => m.confirmPassword, new { @class = "form-input", @placeholder = "Repeat password" })
                    @Html.ValidationMessageFor(m => m.confirmPassword, "", new { @class = "text-danger text-bold" })
                </div>
                <button type="submit" class="btn btn--gradient">Sign up</button>
            </div>
        </div>
    }
</div>

